@model List<Pelicula>

<h1 style="background-color: lightgrey">Carrito:</h1>

@*<a asp-controller="Home" asp-action="Index">Volver al home</a>*@

@if (Model.Count() > 0)
{
    <form method="post">
        <ul class="list-group">
            @foreach (Pelicula pel in Model)
            {
                <li class="list-group-item">
                    @pel.Titulo, @pel.Precio
                    <a class="btn btn-danger" asp-action="MostrarPeliculas"
                       asp-controller="Peliculas"
                       asp-route-idpelicula="@pel.IdPelicula">Eliminar</a>
                </li>
            }
        </ul>
        <button type="submit" class="btn btn-success">Realizar pedido</button>
    </form>
}
else
{
    <h3>No hay películas en el carrito</h3>
}